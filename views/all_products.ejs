<%- include('./_layouts/header') %>

<div class="row products">
    <% products.forEach(product => {  %>
    <div class="col-xs-12 col-md-4 product">
        <a class="pa" href="/products/<%= product.category %>/<%= product.slug %>">
            <img src="/product_images/<%= product.id %>/<%= product.image %>" alt="" class="pimage">
        </a>
        <h3><%= product.title %></h3>
        <h5>$<%= parseFloat(product.price).toFixed(2) %></h5>
        <a href="/products/<%= product.category %>/<%= product.slug %>" class="vd">View Details</a>
    </div>

    <% }) %>
</div>
<%- include('./_layouts/footer') %>