<%- include('./_layouts/header') %>

<body class="sub_page">
    <div class="hero_area">
        <!-- Navigation-->
        <%- include('./_layouts/navigation') %>
    </div>
    <section class="food_section layout_padding main">
        <div class="container">
            <div class="row justify-content-around">
                <div class="col-3">
                    <img class="img-fluid" src="/images/signin.png" alt="">
                </div>
                <div class="col-7">
                    <div class="heading_container heading_center">
                        <h2>
                            Login
                        </h2>
                    </div>

                    <form class="row g-3" action="/users/login" method="post">
                        <div class="form_container">
                            <label class="form-label" for="">Email</label>
                            <input type="email" name="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="">Password</label>
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>
                        <div class="btn_box text-end">
                            <button type="submit">Login</button>
                        </div>
                    </form>
                    <div class="text-end mt-2"><a href="/users/register">Create an account</a></div>
                </div>
            </div>
        </div>
    </section>
    <%- include('./_layouts/footer') %>